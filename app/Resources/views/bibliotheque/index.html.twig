{% extends 'base.html.twig' %}
{% block title %}
    CRUD - {{ parent() }}
{% endblock %}
{% block body %}
<div class="row card-panel title top-grey col s11 cols2 crudcard"> 
    <h5 class="card-title">Listes bibliothèques </h5>

    <table class="records-list borderd hoverable">
        <thead>
            <tr>
               <!-- <th>Id</th>-->
                <th style="width: 25%;">Nom</th>
                <th style="width: 10%;">D. création</th>
                <!--<th>Superficie</th>-->
                <th>Adresse</th>
                <th style="width:11%;">Tel</th>
                <!--<th>Fax</th>-->
                <th>Email</th>
               <!-- <th>Date installation</th>-->
                <th style="width: 5%;">F</th>
                <th style="text-align: center;" colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bibliotheque in bibliotheques %}
            <tr>
               <!-- <td><a href="{{ path('pfe_admin_bibliotheque_show', { 'id': bibliotheque.id }) }}">{{ bibliotheque.id }}</a></td>-->
                <td>{{ bibliotheque.nom }}</td>
                <td>{% if bibliotheque.dateCreation %}{{ bibliotheque.dateCreation|date('d-m-Y') }}{% endif %}</td>
              <!--  <td>{{ bibliotheque.superficie }}</td>-->
                <td>{{ bibliotheque.adresse }}</td>
                <td>{{ bibliotheque.tel }}</td>
                 <!-- <td>{{ bibliotheque.fax }}</td>-->
                <td>{{ bibliotheque.email }}</td>
               <!-- <td>{% if bibliotheque.dateInstallationInternet %}{{ bibliotheque.dateInstallationInternet|date('d-m-Y') }}{% endif %}</td>-->
                <td>{% if bibliotheque.isFormation %}Oui{% else %}Non{% endif %}</td>
                <td> <a href="{{ path('pfe_admin_bibliotheque_edit', { 'id': bibliotheque.id }) }}" 
                    class="btn-floating btn-small waves-effet wave-light red"><i class="material-icons">edit</i></a>
                      
                </td>
                <td> <a href="{{ path('pfe_admin_bibliotheque_remove', { 'id': bibliotheque.id }) }}" class="btn-floating btn-small waves-effet wave-light red" onclick="return confirmed('Voulez vous vraiment supprimer ?"><i class="material-icons">delete</i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
         <a href="{{path('pfe_admin_bibliotheque_new')}}" class="btn-large btn-floating wave-light waves-effet"><i class="material-icons">add</i></a>
</div>
  
        
{% endblock %}
