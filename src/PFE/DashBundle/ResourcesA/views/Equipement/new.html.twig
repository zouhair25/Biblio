{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-teal col s11 cols2 crudcard">
    <h5 class="card-title">Equipement creation</h5>
    {{ form_start(form) }}
    <div class="row">
        <div class="input-field col s4">
            {{ form_row(form.espace) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.typeequipement) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.isDisponible) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s4">
            {{ form_row(form.nombre) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.nombre_endommage) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.nombre_nutilisable) }}
        </div>
        {{ form_widget(form) }}
        <a href="{{ path('pfe_saisi_equipement') }}" class="btn blue-grey">
            <i class="mdi-action-view-headline left"></i> Retour Ã  la liste
        </a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}