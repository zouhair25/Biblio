{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-grey col s11 cols2 crudcard">
    <h5 class="card-title">Equipement list</h5>
    <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th>Created</th>
                <th>Isdisponible</th>
                <th>Nombre</th>
                <th>Nombre_endommage</th>
                <th>Nombre_nutilisable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.isDisponible %}
                <span class="badge green new">Disponible</span>
                {% else %}
                <span class="badge red new">Non Disponible</span>
                {% endif %} </td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.nombreendommage }}</td>
                <td>{{ entity.nombrenutilisable }}</td>
                <td>
                    <a href="{{ path('pfe_saisi_equipement_edit', { 'id': entity.id }) }}" class="btn-flat waves-effect waves-teal">
                        <i class="mdi-editor-mode-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('pfe_saisi_equipement_new') }}" class="btn blue-grey">
        <i class="mdi-editor-add left"></i> Cr√©er nouveau</a>
</div>
{% endblock %}
