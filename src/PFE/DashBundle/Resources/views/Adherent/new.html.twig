{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
  CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel title top-teal col s11 cols2 crudcard">
  <h5 class="card-title" style="text-align:left !important">Création adhérent </h5>
    {{ form_start(form) }}
		<div class="row">
	        <div class="input-field col s6">
		        {{ form_row(form.nom) }}
	        </div>
	    </div>    
	    <div class="row">   
	        <div class="input-field col s6">
	          {{ form_row(form.prenom) }}
	        </div>
	      </div>
	     <div class="row">
	        <div class="input-field col s6">
	        	{{ form_row(form.sexe) }}
	        </div>
	     </div>  
	     <div class="row">
	        <div class="input-field col s6">
	        	{{ form_row(form.dateInscription) }}
	        </div>
	     </div>
	        {#form_widget(form.save,{'attr':{'class':'btn btn-primary'}})#}
         <div class="row">
         	<div class="input-field col s6">
    	      {{ form_row(form.dateNaissance) }}
    	    </div>
         </div>
         <div class="row">
         	<div class="input-field col s6">
    	      {{ form_row(form.bibliotheque) }}
    	    </div>
         </div>
    	 <button type="submit" name="add" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></button>
    	    <a href="{{ path('pfe_saisi_adherent') }}" class="btn blue-grey">
				<i class="mdi-action-view-headline right"></i> Retour à la liste
	        </a>
		{{ form_end(form) }}
		</div>
	 
</div>       
{% endblock %}
