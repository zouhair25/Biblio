{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
  CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-black col s11 cols2 crudcard">
  <h5 class="card-title">Adherent</h5>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Datenaissance</th>
                <td>{{ entity.dateNaissance|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ entity.age }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ entity.sexe }}</td>
            </tr>
            <tr>
                <th>Dateinscription</th>
                <td>{{ entity.dateInscription|date('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions"> 
        <a href="{{ path('pfe_saisi_adherent_edit', { 'id': entity.id }) }}" class="btn">
            <i class="mdi-editor-mode-edit left"></i> Modifier
        </a>   
        <a href="{{ path('pfe_saisi_adherent') }}" class="btn blue-grey">
            <i class="mdi-action-view-headline left"></i> Retour Ã  la liste
        </a>
        {{ form(delete_form) }}
    </div>
</div>
{% endblock %}
