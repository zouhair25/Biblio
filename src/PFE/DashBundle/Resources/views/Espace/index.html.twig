{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
    <div class="row card-panel wtitle top-grey col s11 cols2 crudcard">
        <h5 class="card-title">Liste espace</h5>
        <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th>D. création</th>
                <th>Type</th>
                <th>Disponible</th>
                <th>Etat</th>
                <th>Nbre place assises</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.created %}{{ entity.created|date('d-m-Y') }}{% endif %}</td>
                <td>{{  entity.typeespace.nom }}</td>
                <td>{% if entity.isDisponible %}
                <span class="badge green new">Disponible</span>
                {% else %}
                <span class="badge red new">Non Disponible</span>
                {% endif %} </td>
                <td>{% if entity.etat %}
                <span class="badge blue new">Bon</span>
                {% else %}
                <span class="badge blue-grey new">Médiocre</span>
                {% endif %} </td>
                <td>{{ entity.nombrePlaceAssises }}</td>
           
            <td><a href="{{path('pfe_saisi_espace_edit',{'id':entity.id})}}" class="btn-floating btn-large waves-effet wave-light red"><i class="material-icons">edit</i></a></td>
                <td><a href="{{path('pfe_saisi_espace_remove',{'id':entity.id})}}" class="btn-floating btn-large waves-effet wave-light red" onclick="return confirm('Voulez vous vraiment supprimer')"><i class="material-icons">delete</i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('pfe_saisi_espace_new') }}" class="btn-floating btn-large waves-effet wave-light">
        <i class="mdi-content-add left">add</i></a>
</div>
    {% endblock %}
