{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-grey col s11 cols2 crudcard">
    <h5 class="card-title">Remarque list</h5>
    <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th>Created</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.nom }}</td>
                <td><span class="badge new {% if entity.type == "Remarque" %} orange {% else %} red {% endif %}">{{ entity.type }}</span>  </td>
                <td>{{ entity.description }}</td>
             
                <td> <a href="{{ path('pfe_saisi_remarque_edit', { 'id': entity.id }) }}" class="btn-floating btn-large waves-effet wave-light red"><i class="material-icons">edit</i></a>
                      
                </td>
                <td> <a href="{{ path('pfe_saisi_remarque_remove', { 'id': entity.id }) }}" class="btn-floating btn-large waves-effet wave-light red" onclick="return confirmed('Voulez vous vraiment supprimer ?"><i class="material-icons">delete</i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('pfe_saisi_remarque_new') }}" class="btn blue-grey">
        <i class="mdi-content-add left"></i> Cr√©er nouveau</a>
</div>
{% endblock %}
