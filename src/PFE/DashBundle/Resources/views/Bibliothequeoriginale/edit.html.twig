{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
    <div class="row card-panel wtitle top-teal col s11 cols2 crudcard">
        <h5 class="card-title">Bibliotheque edit</h5>
        {{ form_start(edit_form) }}
        <div class="row">
            <div class="input-field col s8">
                {{ form_row(edit_form.nom) }}
            </div>
            <div class="input-field col s4">
                {#{{ form_row(edit_form.responsable) }}#}
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                {{ form_row(edit_form.adresse) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.tel) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.fax) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                {{ form_row(edit_form.email) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.dateInstallationInternet) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.dateCreation) }}
            </div>
        </div>

        <div class="row">
            <div class="input-field col s3">
                {{ form_row(edit_form.superficie) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.catalogue) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.province) }}
            </div>
            <div class="input-field col s3">
                {{ form_row(edit_form.isFormation) }}
            </div>
            {{ form_widget(edit_form) }}
            <a href="{{ path('pfe_admin_bibliotheque') }}" class="btn blue-grey">
                <i class="mdi-action-view-headline left"></i> Retour Ã  la liste
            </a>
            {{ form_end(edit_form) }}
            <div class="record_actions">{{ form(delete_form) }}</div>
        </div>
    </div>
{% endblock %}
