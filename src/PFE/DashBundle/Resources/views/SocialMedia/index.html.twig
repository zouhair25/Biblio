{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-grey col s11 cols2 crudcard">
    <h5 class="card-title">SocialMedia list</h5>
    <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Url</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><img style="padding: 0 2px;" src="{{ asset('uploads/social/'~entity.image) }}"/></td>
                <td>{{entity.nom}}</td>
                <td><a href="http://{{ entity.url }}" target="_blank">{{ entity.url }}</a></td>
                <td>
                    <a href="{{ path('pfe_admin_socialmedia_edit', { 'id': entity.id }) }}" class="btn-floating btn-small waves-effet wave-light red">
                        <i class="material-icons">edit</i></a>
                </td>
                <td>
                    <a href="{{ path('pfe_admin_socialmedia_delete', { 'id': entity.id }) }}" class="btn-floating btn-small waves-effet wave-light red">
                        <i class="material-icons">delete</i>d</a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('pfe_admin_socialmedia_new') }}" class="btn blue-grey">
        <i class="mdi-content-add left"></i> Cr√©er nouveau</a>
</div>
    {% endblock %}
