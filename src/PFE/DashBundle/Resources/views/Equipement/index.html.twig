{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-grey col s11 cols2 crudcard">
    <h5 class="card-title">Liste équipements </h5>
    <table class="records_list bordered hoverable">
        <thead>
            <tr>
                <th>D. création</th>
                <th>Disponibilité</th>
                <th>Nbre</th>
                <th>Nbre endommage</th>
                <th>Nbre utilisable</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{% if entity.created %}{{ entity.created|date('d-m-Y') }}{% endif %}</td>
                <td>{% if entity.isDisponible %}
                <span class="badge green new">Disponible</span>
                {% else %}
                <span class="badge red new">Non Disponible</span>
                {% endif %} </td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.nombreendommage }}</td>
                <td>{{ entity.nombrenutilisable }}</td>
                
                  <td> <a href="{{ path('pfe_saisi_equipement_edit', { 'id': entity.id }) }}" class="btn-floating btn-large waves-effet wave-light red"><i class="material-icons">edit</i></a>
                      
                </td>
                <td> <a href="{{ path('pfe_saisi_equipement_remove', { 'id': entity.id }) }}" class="btn-floating btn-large waves-effet wave-light red" onclick="return confirmed('Voulez vous vraiment supprimer ?"><i class="material-icons">delete</i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <a href="{{ path('pfe_saisi_equipement_new') }}" class="btn blue-grey">
        <i class="mdi-content-add left"></i> Créer nouveau</a>
</div>
{% endblock %}
