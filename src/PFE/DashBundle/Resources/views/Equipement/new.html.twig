{% extends "PFEDashBundle::layout.html.twig" %}

{% block title %}
    CRUD - {{ parent() }}
{% endblock %}

{% block body -%}
<div class="row card-panel wtitle top-teal col s11 cols2 crudcard">
    <h5 class="card-title">Equipement creation</h5>
    {{ form_start(form) }}
    <div class="row">
        <div class="input-field col s4">
            {{ form_row(form.espace) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.typeequipement) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.isDisponible) }}
        </div>
    </div>
    <div class="row">
        <div class="input-field col s4">
            {{ form_row(form.nombre) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.nombre_endommage) }}
        </div>
        <div class="input-field col s4">
            {{ form_row(form.nombre_nutilisable) }}
        </div>

        {{ form_widget(form) }}
        <div class="row">
            <div class="input-field col s2">  <button type="submit" value="Create" class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">add</i></button></div>
