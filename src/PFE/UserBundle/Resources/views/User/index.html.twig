{% extends 'base.html.twig' %}
{% block title %}
    CRUD - {{ parent() }}
{% endblock %}
{% block body %}
<div class="row card-panel title top-grey col s11 cols2 crudcard"> 
    <h5 class="card-title">Listes bibliothèques </h5>

    <table class="records-list borderd hoverable">
        <thead>
            <tr>
               <!-- <th>Id</th>-->
                <th>Nom</th>
                <th>Date création</th>
                <!--<th>Superficie</th>-->
                <th>Adresse</th>
                <th>Tel</th>
                <th>Fax</th>
                <th>Email</th>
               <!-- <th>Date installation</th>-->
                <th>Formation</th>
                <th style="text-align: right;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for u in user %}
            <tr>
             
                <td> <a href="{{ path('pfe_admin_bibliotheque_edit', { 'id': u.id }) }}" class="btn-floating btn-large waves-effet wave-light red"><i class="material-icons">edit</i></a>
                      
                </td>
                <td> <a href="{{ path('pfe_admin_bibliotheque_remove', { 'id': u.id }) }}" class="btn-floating btn-large waves-effet wave-light red" onclick="return confirmed('Voulez vous vraiment supprimer ?"><i class="material-icons">delete</i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
         <a href="{{path('pfe_admin_bibliotheque_new')}}" class="btn-large btn-floating wave-light waves-effet"><i class="material-icons">add</i></a>
</div>
  
        
{% endblock %}
